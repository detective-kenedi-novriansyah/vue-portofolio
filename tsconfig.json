{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "server/*"
      ]
    },
    "lib": [
      "es6",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "server/**/*.ts",
    "server/**/*.tsx",
    "server/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx", 
    "server/typings/shims-vue.d.ts", 
    "server/typings/shims-tsx.d.ts",
    "server/typings/vuesax.d.ts",
    "server/typings/vue-types.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
